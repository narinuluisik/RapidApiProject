                                <table class="table align-items-center mb-0">
                                    <thead>
                                        <tr>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder">Ev Sahibi</th>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder text-center">Skor</th>
