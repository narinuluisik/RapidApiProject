                                                        <span id="shortExcerpt-@uniqueId">@shortExcerpt</span>
                                                        <span id="fullExcerpt-@uniqueId" style="display:none;">@excerpt</span>
                                                        @if (isLong)
                                                        {
                                                            <a href="javascript:void(0);" class="text-primary ms-2" onclick="toggleExcerpt('@uniqueId')" id="toggleBtn-@uniqueId">Devamını Oku</a>
                                                        }
                                                    </p>
                                                </td>
                                                <td class="ps-3">
                                                    <span class="text-xs font-weight-normal">@haber.date</span>
                                                </td>
                                                <td class="ps-3">
                                                    @if (!string.IsNullOrEmpty(haber.thumbnail))
                                                    {
                                                        <img src="@haber.thumbnail" alt="Resim" style="max-width: 80px; border-radius: 5px;" />
                                                    }
                                                    else
                                                    {
                                                        <span class="text-xs text-muted">Yok</span>
                                                    }
                                                </td>
                                                <td class="align-middle text-center ps-3">
                                                    <button class="btn btn-link text-secondary mb-0" title="Daha fazla">
                                                        <i class="fa fa-ellipsis-v text-xs"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>

                                <script>
                                    function toggleExcerpt(id) {
                                        var shortElem = document.getElementById("shortExcerpt-" + id);
                                        var fullElem = document.getElementById("fullExcerpt-" + id);
                                        var btn = document.getElementById("toggleBtn-" + id);

                                        if (shortElem.style.display === "none") {
                                            shortElem.style.display = "inline";
                                            fullElem.style.display = "none";
                                            btn.textContent = "Devamını Oku";
                                        } else {
                                            shortElem.style.display = "none";
                                            fullElem.style.display = "inline";
                                            btn.textContent = "Küçült";
                                        }
                                    }
                                </script>

