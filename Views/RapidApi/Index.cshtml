            <div class="row my-4">
                <!-- Akaryakıtlar -->
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-header pb-0">
                            <h6>Akaryakıtlar</h6>
                            <p class="text-sm mb-0">
                                <i class="fa fa-gas-pump text-info" aria-hidden="true"></i>
                                <span class="font-weight-bold ms-1">Firmalara ait akaryakıt verileri</span>
                            </p>
                        </div>
                        <div class="card-body px-3 pt-0 pb-2">
                            <!-- px-0 → px-3 -->
                            <div class="table-responsive p-2">
                                <!-- p-0 → p-2 -->
                                <table class="table align-items-center mb-0">
                                    <thead class="bg-light">
                                        <tr>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder ps-2">Firma</th>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder ps-2">Benzin</th>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder ps-2">Motorin</th>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder ps-2">LPG</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td class="ps-2"><span class="text-sm">@ViewBag.Firma1</span></td>
                                            <td class="ps-2"><span class="text-sm">@ViewBag.Benzin1 Litre</span></td>
                                            <td class="ps-2"><span class="text-sm">@ViewBag.Motorin1 Litre</span></td>
                                            <td class="ps-2"><span class="text-sm">@ViewBag.LPG1 Litre</span></td>
                                        </tr>
                                        <tr>
                                            <td class="ps-2"><span class="text-sm">@ViewBag.Firma2</span></td>
                                            <td class="ps-2"><span class="text-sm">@ViewBag.Benzin2 Litre</span></td>
                                            <td class="ps-2"><span class="text-sm">@ViewBag.Motorin2 Litre</span></td>
                                            <td class="ps-2"><span class="text-sm">@ViewBag.LPG2 Litre</span></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <style>
                    .weather-image {
                        position: absolute;
                        right: 10px;
                        top: 50%;
                        transform: translateY(-50%);
                        height: 80%;
                        opacity: 0.15;
                        z-index: 0;
                    }

                    .weather-content {
                        position: relative;
                        z-index: 1;
                    }
                </style>

                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 position-relative overflow-hidden">
                        <!-- Görsel (arkaplan efekti gibi) -->
                        <img src="https://cdn-icons-png.flaticon.com/512/1779/1779940.png" alt="Hava Durumu" class="weather-image">

                        <div class="card-header pb-0 weather-content">
                            <h6>🌤️ Güncel Hava Durumu</h6>
                            <p class="text-sm">
                                <i class="fa fa-calendar" aria-hidden="true"></i>
                                <span class="font-weight-bold">@ViewBag.Tarih</span>
                            </p>
                        </div>

                        <div class="card-body p-3 weather-content">
                            <p><strong>En Yüksek Sıcaklık:</strong> @ViewBag.EnYuksekSicaklik °C</p>
                            <p><strong>En Düşük Sıcaklık:</strong> @ViewBag.EnDusukSicaklik °C</p>
                            <p><strong>Yağış İhtimali:</strong> @ViewBag.YagisIhtimali %</p>
                            <p><strong>Rüzgar Hızı:</strong> @ViewBag.RuzgarHizi km/h</p>
                            <p><strong>Nem:</strong> @ViewBag.Nem %</p>
                        </div>
                    </div>
                </div>

                <!-- Coin Bilgileri -->
                <div class="col-lg-4 col-md-12 mb-4">
                    <div class="card h-100">
                        <div class="card-header pb-0">
                            <h6>Coin Bilgileri</h6>
                        </div>
                        <div class="card-body px-3 pt-2 pb-3">
                            <div class="table-responsive">
                                <table class="table table-hover align-middle mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder">Coin</th>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder">Fiyat ($)</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (ViewBag.CoinList != null)
                                        {
                                            foreach (var coin in ViewBag.CoinList)
                                            {
                                                <tr>
                                                    <td>
                                                        <div class="d-flex align-items-center">
                                                            <img src="@coin.iconUrl" alt="@coin.name" style="width: 24px; height: 24px;" class="me-2" />
                                                            <span class="text-sm fw-bold">@coin.name</span>
                                                        </div>
                                                    </td>
                                                    <td><span class="text-sm">@coin.price</span></td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="2" class="text-center text-muted">Coin bilgisi bulunamadı.</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            @using Newtonsoft.Json
            @{
                var malzemelerList = ViewBag.malzemeler != null
                ? JsonConvert.DeserializeObject<List<string>>(ViewBag.malzemeler.ToString())
                : new List<string>();

                var tarifList = ViewBag.Tarif != null
                ? JsonConvert.DeserializeObject<List<string>>(ViewBag.Tarif.ToString())
                : new List<string>();
            }
      
            <div class="row my-4">
                <!-- Günün Yemeği -->
                <div class="col-lg-6 col-md-12 mb-4">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-header bg-gradient-primary text-white py-2 d-flex justify-content-between align-items-start">
                            <div>
                                <small class="text-white-50 d-block mb-0">Günün Yemeği</small>
                                <h4 class="mb-0 fw-bold text-white">@ViewBag.Title</h4>
                            </div>
                            <div class="d-flex align-items-end">
                                <span class="badge bg-gradient-primary text-white">@ViewBag.Category</span>
                            </div>
                        </div>
                        <div class="card-body d-flex gap-3 flex-wrap align-items-start">
                            <img src="https://www.seriouseats.com/thmb/DbQHUK2yNCALBnZE-H1M2AKLkok=/1500x0/filters:no_upscale():max_bytes(150000):strip_icc()/chicken-tikka-masala-for-the-grill-recipe-hero-2_1-cb493f49e30140efbffec162d5f2d1d7.JPG"
                                 alt="Tarif Resmi" class="rounded shadow" style="height: 200px; width: 200px; object-fit: cover;" />
                            <div style="flex: 1; min-width: 250px; max-height: 400px; overflow-y: auto;">
                                <p class="text-muted mb-2" style="font-size: 0.9rem;">@ViewBag.Acıklama</p>

                                <div>
                                    <a class="btn btn-sm btn-outline-primary mb-2" data-bs-toggle="collapse" href="#malzemelerCollapse" role="button" aria-expanded="false" aria-controls="malzemelerCollapse">
                                        Malzemeler
                                    </a>
                                    <div class="collapse" id="malzemelerCollapse">
                                        <ul class="list-unstyled ps-3" style="font-size: 0.9rem;">
                                            @foreach (var malzeme in malzemelerList)
                                            {
                                                <li>• @malzeme</li>
                                            }
                                        </ul>
                                    </div>
                                </div>

                                <div>
                                    <a class="btn btn-sm btn-outline-primary mb-2" data-bs-toggle="collapse" href="#tarifCollapse" role="button" aria-expanded="false" aria-controls="tarifCollapse">
                                        Tarif
                                    </a>
                                    <div class="collapse" id="tarifCollapse">
                                        <ol class="ps-3" style="font-size: 0.9rem;">
                                            @foreach (var adim in tarifList)
                                            {
                                                <li>@adim</li>
                                            }
                                        </ol>
                                    </div>
                                </div>

                                <ul class="list-unstyled mt-3 text-muted" style="font-size: 0.85rem;">
                                    <li><strong>Hazırlık Süresi:</strong> @ViewBag.hazirlamavakti dk</li>
                                    <li><strong>Pişirme Süresi:</strong> @ViewBag.Pisirmevakti dk</li>
                                    <li><strong>Toplam Süre:</strong> @ViewBag.ToplamSüre dk</li>
                                    <li><strong>Kişi Sayısı:</strong> @ViewBag.KisiSayısı</li>
                                    <li><strong>Toplam Kalori:</strong> @ViewBag.ToplamKalori kcal</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

