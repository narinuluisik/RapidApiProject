                                            var excerpt = haber.excerpt as string ?? "";
                                            var shortExcerpt = excerpt.Length > 100 ? excerpt.Substring(0, 100) + "..." : excerpt;
                                            var isLong = excerpt.Length > 100;
                                            var uniqueId = Guid.NewGuid().ToString("N");

                                            <tr>
                                                <td class="ps-3">
                                                    <a href="@haber.url" target="_blank" class="text-sm font-weight-bold">@haber.title</a>
                                                </td>
                                                <td class="ps-3">
